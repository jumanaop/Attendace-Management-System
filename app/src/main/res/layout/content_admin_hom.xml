<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/profile_back2"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="in.example.attendance.Admin_hom"
    tools:showIn="@layout/app_bar_admin_hom">
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:padding="2dp"
            android:layout_marginTop="25dp"
            android:scaleType="fitXY"
            android:layout_gravity="bottom"
            android:contentDescription="@string/s_pro_pic"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:gravity="center">
        <TextView
            android:id="@id/tv_date"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="20dp"
            android:text="@string/date"/>
        <TextView
            android:id="@id/tv_name"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/app_name"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:clipToPadding="false"
            android:weightSum="3">
            <GridLayout
                android:id="@+id/T_mainGrids"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                tools:ignore="InefficientWeight,UselessParent">
                <android.support.v7.widget.CardView
                    android:id="@+id/take_att"
                    android:layout_width="@dimen/cv_width"
                    android:layout_height="@dimen/cv_hieght"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            android:layout_width="@dimen/iv_width"
                            android:layout_height="@dimen/iv_hieght"
                            android:layout_marginTop="5dp"
                            android:padding="10dp"
                            android:contentDescription="@string/attendance"
                            android:background="@drawable/circle_shape"
                            android:src="@drawable/ic_take_att" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/attendance" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/notice"
                    android:layout_width="@dimen/cv_width"
                    android:layout_height="@dimen/cv_hieght"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="@dimen/iv_width"
                            android:layout_height="@dimen/iv_hieght"
                            android:padding="10dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/circle_shape"
                            android:src="@drawable/ic_action_notice"
                            android:contentDescription="@string/notice" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Notice" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/group_sms"
                    android:layout_width="@dimen/cv_width"
                    android:layout_height="@dimen/cv_hieght"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            android:layout_width="@dimen/iv_width"
                            android:layout_height="@dimen/iv_hieght"
                            android:layout_marginTop="5dp"
                            android:padding="10dp"
                            android:background="@drawable/circle_shape"
                            android:contentDescription="@string/group_sms"
                            android:src="@drawable/ic_mail24_white" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Group SMS"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/edit_notice"
                    android:layout_width="@dimen/cv_width"
                    android:layout_height="@dimen/cv_hieght"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            android:layout_width="@dimen/iv_width"
                            android:layout_height="@dimen/iv_hieght"
                            android:layout_marginTop="5dp"
                            android:padding="10dp"
                            android:background="@drawable/circle_shape"
                            android:src="@android:drawable/ic_media_play"
                            android:contentDescription="@string/about_us" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Media" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/about_us"
                    android:layout_width="@dimen/cv_width"
                    android:layout_height="@dimen/cv_hieght"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            android:layout_width="@dimen/iv_width"
                            android:layout_height="@dimen/iv_hieght"
                            android:layout_marginTop="5dp"
                            android:padding="10dp"
                            android:background="@drawable/circle_shape"
                            android:src="@drawable/ic_about"
                            android:contentDescription="@string/about_us" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/about_us" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/diary"
                    android:layout_width="@dimen/cv_width"
                    android:layout_height="@dimen/cv_hieght"
                    app:cardCornerRadius="15dp"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            android:layout_width="@dimen/iv_width"
                            android:layout_height="@dimen/iv_hieght"
                            android:layout_marginTop="5dp"
                            android:padding="10dp"
                            android:background="@drawable/circle_shape"
                            android:src="@android:drawable/ic_menu_edit"
                            android:contentDescription="@string/about_us" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Report" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </GridLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:focusable="true"
            android:background="@drawable/home_bottom_back"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:baselineAligned="false">
                <LinearLayout
                    android:id="@+id/password"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:layout_height="40dp"
                    android:background="@drawable/hover_back_home_bottom"
                    android:layout_marginEnd="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Password"
                            android:textAlignment="gravity"
                            android:gravity="center_vertical"
                            android:drawableLeft="@android:drawable/ic_lock_idle_lock"
                            android:drawableStart="@android:drawable/ic_lock_idle_lock" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/diary_b"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:layout_height="40dp"
                    android:background="@drawable/hover_back_home_bottom"
                    android:layout_marginEnd="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Diary"
                            android:textAlignment="center"
                            android:gravity="center_vertical"
                            android:drawableLeft="@drawable/ic_action_notice"
                            android:drawableStart="@drawable/ic_action_notice" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/help"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:background="@drawable/hover_back_home_bottom">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Help"
                            android:textAlignment="gravity"
                            android:gravity="center_vertical"
                            android:drawableLeft="@android:drawable/ic_menu_help"
                            android:drawableStart="@android:drawable/ic_menu_help" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
